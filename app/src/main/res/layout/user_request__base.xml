<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_requests_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/aoDispor"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/user_requests_creation_form"
            layout="@layout/user_request__creation_form" />

    </ScrollView>

    <include layout="@layout/shared__not_loaded_page" />

    <include
        android:id="@+id/user_requests_active_request"
        layout="@layout/user_request__active_request" />

</RelativeLayout>